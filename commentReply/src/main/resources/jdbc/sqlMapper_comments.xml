  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="test.com.practice1.comments">
	<select id="C_SELECT_ALL"
		resultType="test.com.practice1.comments.model.CommentsVO">
		SELECT *
		FROM comment_reply
		where c_r_posted_num=#{c_r_posted_num}
	</select>

	<insert id="C_INSERT"
		parameterType="test.com.practice1.comments.model.CommentsVO">
		insert into somoim_board_comments (num, som_member_num,
		content, good_count, som_board_num, som_comment_depth, somoim_num)
		values (SEQ_SOMOIM_BOARD_COMMENTS.nextval, 1 , #{content,
		jdbcType=VARCHAR
		},0,#{som_board_num, jdbcType=VARCHAR}, 0, #{somoim_num})
	</insert>

